<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txt_carousel_name_meal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/common_size_min"
        android:layout_marginHorizontal="@dimen/common_margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/txt_carousel_name_meal"
        app:reflect_gap="5dp">

        <ImageView
            android:id="@+id/img_carousel"
            android:layout_width="220dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            android:src="@drawable/gradient"
            tools:ignore="ContentDescription" />

    </com.jackandphantom.carouselrecyclerview.view.ReflectionViewContainer>

</androidx.constraintlayout.widget.ConstraintLayout>